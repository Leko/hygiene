  "bugs": {
    "url": "https://github.com/Leko/hygiene/issues"
  },
  "homepage": "https://github.com/Leko/hygiene#readme",
  "devDependencies": {
    "@types/babel__code-frame": "^7.0.0",
    "@types/debug": "^4.1.0",
    "@types/glob": "^7.1.1",
    "@types/lodash": "^4.14.119",
    "dotenv-cli": "^1.4.0",
    "npm-run-all": "^4.1.5",
    "upbin": "^0.9.0"
  },
  "dependencies": {
    "@babel/code-frame": "^7.0.0",
